@page "/Admin/Users/Grid"
@attribute [Authorize(Roles = "Administrator")]
@using Vex.Models
@using Vex.Data
@inject IAuth0Service Auth0Service

<PageTitle>User Grid | Vex</PageTitle>

<h1>User Grid</h1>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    <tr>
                        <td>@user</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {

    string users;

    protected override async Task OnInitializedAsync()
    {
        users = await Auth0Service.GetUsersAsync();
        Console.WriteLine(users);
    }
}