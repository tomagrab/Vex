@rendermode InteractiveServer
@inject IUserService UserService

<Bar Mode="BarMode.VerticalInline"
     CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Desktop"
     NavigationBreakpoint="Breakpoint.Tablet"
     ThemeContrast="ThemeContrast.Dark">
     <BarBrand>
        <BarItem>
            <BarLink To="/#Dashboard">
                <BarIcon IconName="IconName.Home" />
                Vex
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <CascadingAuthenticationState>
            <BarStart>
                <BarItem>
                    <BarLink To="/">
                        <BarIcon IconName="IconName.Dashboard" />
                        Dashboard
                    </BarLink>
                </BarItem>
                <AuthorizeView>
                    <BarItem>
                        <BarLink To="/Tickets">
                            <BarIcon IconName="IconName.Ticket" />
                            Tickets
                        </BarLink>
                    </BarItem>
                    <BarItem>
                        <BarLink To="/Companies">
                            <BarIcon IconName="IconName.City" />
                            Companies
                        </BarLink>
                    </BarItem>
                    <BarItem>
                        <BarLink To="/Branches">
                            <BarIcon IconName="IconName.Building" />
                            Branches
                        </BarLink>
                    </BarItem>
                </AuthorizeView>
            </BarStart>
            <AuthorizeView>
                <Authorized>
                    <BarEnd>
                        <BarItem>
                            <BarLink To="Account">
                                <BarIcon IconName="IconName.UserCircle" />
                                @userName
                            </BarLink>
                        </BarItem>
                        <BarItem>
                            <BarLink To="Account/Logout">
                                <BarIcon IconName="IconName.Unlock" />
                                Logout
                            </BarLink>
                        </BarItem>
                    </BarEnd>
                </Authorized>
                <NotAuthorized>
                    <BarEnd>
                        <BarItem>
                            <BarLink To="Account/Login">
                                <BarIcon IconName="IconName.Lock" />
                                Login
                            </BarLink>
                        </BarItem>
                    </BarEnd>
                </NotAuthorized>
            </AuthorizeView>
        </CascadingAuthenticationState>
    </BarMenu>
</Bar>

@code {
    private string userName = string.Empty;
    protected override async Task OnInitializedAsync()
    {
        userName = await UserService.GetUserNameAsync() ?? "Account";
    }
}