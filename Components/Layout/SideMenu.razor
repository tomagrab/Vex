@rendermode InteractiveServer

<Bar Mode="BarMode.VerticalInline"
     CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Desktop"
     NavigationBreakpoint="Breakpoint.Tablet"
     ThemeContrast="ThemeContrast.Dark">
     <BarBrand>
        <BarItem>
            <BarLink To="/#Dashboard">
                <BarIcon IconName="IconName.Home" />
                Vex
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="/">
                    <BarIcon IconName="IconName.Dashboard" />
                    Dashboard
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/Tickets">
                    <BarIcon IconName="IconName.Ticket" />
                    Tickets
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/Companies">
                    <BarIcon IconName="IconName.City" />
                    Companies
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/Branches">
                    <BarIcon IconName="IconName.Building" />
                    Branches
                </BarLink>
            </BarItem>
        </BarStart>
    </BarMenu>
    <CascadingAuthenticationState>
        <AuthorizeView>
            <Authorized>
                <BarMenu>
                    <BarEnd>
                        <BarItem>
                            <BarLink To="Account/Profile">
                                <BarIcon IconName="IconName.User" />
                                Profile
                            </BarLink>
                        </BarItem>
                    </BarEnd>
                </BarMenu>
            </Authorized>
            <NotAuthorized>
                <BarMenu>
                    <BarEnd>
                        <BarItem>
                            <BarLink To="Account/Login">
                                <BarIcon IconName="IconName.Lock" />
                                Login
                            </BarLink>
                        </BarItem>
                    </BarEnd>
                </BarMenu>
            </NotAuthorized>
        </AuthorizeView>
    </CascadingAuthenticationState>
</Bar>